@model AppLogin.ViewModels.UserVM;
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Registrarse</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="row mt-5 justify-content-center">
        <div class="col-sm-4">
            <div class="card">
                <div class="card-header">
                    Registrate
                </div>
                <div class="card-body">
                    <form asp-controller="Access" asp-action="Register" method="post">
                        <input class="form-control mb-3" type="text" placeholder="Nombre Completo" required asp-for="FullName"/>
                        <input class="form-control mb-3" type="text" placeholder="Email" required asp-for="Email"/>
                        <input class="form-control mb-3" type="password" placeholder="Contraseña" required asp-for="Password"/>
                        <input class="form-control mb-3" type="password" placeholder="Confirmar Contraseña" required asp-for="ConfirmPassword"/>
                        <div class="d-grip gap-2 mb-3">
                            <button class="btn btn-primary" type="submit">Registrarme</button>
                        </div>

                        @if(ViewData["Mensaje"] is not null)
                        {
                            <div class="alert alert-danger" role="alert">
                                @ViewData["Mensaje"]
                            </div>
                        }

                        ¿Ya tiene una cuenta? <a asp-controller="Access" asp-action="Login">Inicie Sesion</a>

                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>